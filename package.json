{
  "name": "allinone",
	"displayName": "allinone",
	"description": "",
	"version": "0.0.2",
	"repository": {
        "url": "https://github.com/hangj/vscode_extension"
    },
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:allinone.helloWorld",
		"onCommand:allinone.insert_line_number", 
		"onCommand:allinone.auto_multi_select",
		"onCommand:allinone.auto_indent"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "allinone.helloWorld",
				"title": "allinone: Hello World"
			},
			{
				"command": "allinone.insert_line_number",
				"title": "allinone: insert line number"
			},
			{
				"command": "allinone.auto_multi_select",
				"title": "allinone: auto multi select"
			},
			{
				"command": "allinone.auto_indent",
				"title": "allinone: auto indent"
			}
		],
		"keybindings": [
			{
				"command": "allinone.auto_multi_select",
				"key": "ctrl+shift+a",
				"mac": "cmd+shift+a",
				"when": "editorHasSelection"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.80.0",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "19.x",
		"@typescript-eslint/eslint-plugin": "^6.1.0",
		"@typescript-eslint/parser": "^6.1.0",
		"eslint": "^8.45.0",
		"glob": "^10.3.3",
		"mocha": "^10.2.0",
		"typescript": "^5.1.6",
		"@vscode/test-electron": "^2.3.3"
	}
}
